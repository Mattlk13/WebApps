<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tobykurien.webapps">

	<uses-permission
		android:name="android.permission.INTERNET" />
	<uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission
		android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

	<uses-permission
		android:name="android.permission.ACCESS_GPS" />
	<uses-permission
		android:name="android.permission.ACCESS_ASSISTED_GPS" />
	<uses-permission
		android:name="android.permission.ACCESS_LOCATION" />
	<uses-permission
		android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission
		android:name="android.permission.ACCESS_FINE_LOCATION" />

	<application android:icon="@mipmap/ic_launcher"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:label="@string/app_name" android:theme="@style/AppTheme"
		android:allowBackup="false" android:usesCleartextTraffic="false">

		<meta-data
			android:name="android.webkit.WebView.MetricsOptOut"
			android:value="true" />
		<meta-data android:name="android.max_aspect"
			android:value="2.1" />

		<provider
			android:name="android.support.v4.content.FileProvider"
			android:authorities="com.tobykurien.webapps.fileprovider"
			android:exported="false" android:grantUriPermissions="true"
			android:readPermission="com.tobykurien.webapps.fileprovider.READ">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/file_paths" />
		</provider>

		<activity
			android:name="com.tobykurien.webapps.activity.MainActivity"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/app_name" android:resizeableActivity="true">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEND" />

				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.tobykurien.webapps.activity.WebAppActivity"
			android:launchMode="standard"
			android:documentLaunchMode="intoExisting"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/app_name" android:exported="true">
		</activity>
		<activity
			android:name="com.tobykurien.webapps.activity.Preferences"
			android:label="@string/app_name" />
		<activity
			android:name="com.tobykurien.webapps.activity.ShortcutActivity"
			android:label="@string/shortcut_label">
			<intent-filter>
				<action android:name="android.intent.action.CREATE_SHORTCUT" />

				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
	</application>

</manifest>